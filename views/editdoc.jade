extend layout
block head
  link(rel='stylesheet', href='/css/editdoc.css')
  script(type="text/javascript",src="//cdnjs.cloudflare.com/ajax/libs/ckeditor/4.3.2/ckeditor.js")
  script(type="text/javascript",src="/editdoc.js")
block header
  div(class="index-container")
    a(href="/")
      |Index
  div(class="about-container")
    a(href="/about")
      |About
block content
  div(class="editor-header")
    span(class="editor-status")
      |Initializing...
    h2
      span
        |#{title}
  p(class="info-text")
    |You can edit this document with your friends
  div(class="editor")
    div(id="title-container")
      input(type="text", name="name", value="#{file.properties.title}")
    div(id="ckcontainer")