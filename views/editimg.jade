extend layout
block head
  link(rel='stylesheet', href='/coillusionist/css/coillusionist.css')
  link(rel='stylesheet', href='/css/editimg.css')
  link(rel='stylesheet', href='//cdnjs.cloudflare.com/ajax/libs/spectrum/1.3.0/css/spectrum.min.css')
  script(type="text/javascript",src="/pixastic/pixastic.js")
  script(type="text/javascript",src="//cdnjs.cloudflare.com/ajax/libs/spectrum/1.3.0/js/spectrum.min.js")
  script(type="text/javascript",src="/coillusionist/coillusionist.js")
  script(type="text/javascript",src="/editimg.js")
block header
  div(class="index-container")
    a(href="/")
      |Index
  div(class="about-container")
    a(href="/about")
      |About
block content
  div(class="editor-header")
    span(class="editor-status")
      |Initializing...
    h2
      span
        |#{title}
  p(class="info-text")
    |You can edit this image with your friends
  div(class="editor")
    div(id="title-container")
      input(type="text", name="name", value="#{file.properties.title}")
    div(id="image-container")
      img(class="co-illusionist-image", src="/example.jpg")